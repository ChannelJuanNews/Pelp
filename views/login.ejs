<div class="container">
  <h1>Log In!</h1>
  <div class="row">

    <form class="col s12" action="/login" method="post">

      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Email" id="email" type="text" class="validate" name="email">
          <!--<label for="first_name">Email</label>-->
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Password" id="password" type="password" class="validate" name="password">
          <!--<label for="password">Password</label>-->
        </div>
      </div>

      <button type="submit" class="waves-effect waves-light btn submit-btn">Submit</button>
    </form>
  </div>

  <p>
    Or, <a href="/signup">Sign Up</a>
  </p>

</div>
